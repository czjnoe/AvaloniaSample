<Application xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 x:Class="AvaloniaSample.App"
			 xmlns:local="using:AvaloniaSample"
			 xmlns:semi="https://irihi.tech/semi"
			 xmlns:system="using:System"
			 xmlns:u-semi="https://irihi.tech/ursa/themes/semi"
			 xmlns:ext="clr-namespace:AvaloniaSample.Extensions"
			 RequestedThemeVariant="Dark">
	<!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

	<Application.DataTemplates>
		<local:ViewLocator/>
	</Application.DataTemplates>

	<Application.Resources>
		<!-- 当前全局字体 -->
		<FontFamily x:Key="AppFontFamily">Microsoft YaHei</FontFamily>
		<!-- 全局字体大小 -->
		<system:Double x:Key="AppFontSize">15</system:Double>
	</Application.Resources>

	<Application.Styles>
		<FluentTheme />
		<semi:SemiTheme Locale="zh-CN" />
		<u-semi:SemiTheme Locale="zh-CN"/>
		<StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>

		<!-- 所有控件统一使用动态字体和字体大小 -->
		<Style Selector=":is(Control)">
			<Setter Property="TextElement.FontFamily"
					Value="{DynamicResource AppFontFamily}" />
			<Setter Property="TextElement.FontSize" Value="{DynamicResource AppFontSize}" />
		</Style>

	</Application.Styles>

	<TrayIcon.Icons>
		<TrayIcons>
			<TrayIcon
			Icon="/Assets/avalonia-logo.ico">
				<TrayIcon.Menu>
					<NativeMenu>
						<NativeMenuItem Header="Git" Click="OpenGithub_OnClicked" />
						<NativeMenuItemSeparator />
						<NativeMenuItem Header="{ext:Localize ShowMainWindow}" Click="OpenMainWindow_OnClicked" />
						<NativeMenuItemSeparator />
						<NativeMenuItem Header="{ext:Localize Exit}" Click="ExitApplication_OnClicked" />
					</NativeMenu>
				</TrayIcon.Menu>
			</TrayIcon>
		</TrayIcons>
	</TrayIcon.Icons>

</Application>