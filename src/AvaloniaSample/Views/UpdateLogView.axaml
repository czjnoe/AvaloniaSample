<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:md="clr-namespace:MarkdownAIRender.Controls.MarkdownRender;assembly=MarkdownAIRender"
			 xmlns:viewModels="using:AvaloniaSample.ViewModels"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="AvaloniaSample.Views.UpdateLogView"
			 x:DataType="viewModels:UpdateLogViewModel"
			 xmlns:prism="http://prismlibrary.com/"
			 >

	<Border Classes="Hover" Theme="{StaticResource CardBorder}">
		<ScrollViewer>
			<md:MarkdownRender Value="{Binding UpdateLogMarkdownContent}" />
		</ScrollViewer>
	</Border>

</UserControl>
