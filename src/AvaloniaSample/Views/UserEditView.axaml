<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:AvaloniaSample.ViewModels"
			 xmlns:prism="http://prismlibrary.com/"
			 x:Class="AvaloniaSample.UserEditView"
			 x:DataType="vm:UserEditViewModel"
			 Width="400" Height="250"
			 >

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center">
			Name
		</Label>
		<TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Height="25" Text="{Binding Name}" />
		<Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center">
			Age
		</Label>
		<TextBox Grid.Row="1" Grid.Column="1" Height="25" Text="{Binding Age}" />

		<StackPanel Grid.Row="2" Orientation="Horizontal">
			<Button Command="{Binding SaveCommand}">Save
			</Button>
			<Button Command="{Binding CancelCommand}">Cancel
			</Button>
		</StackPanel>
	</Grid>
</UserControl>
